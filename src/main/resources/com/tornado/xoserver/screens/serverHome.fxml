<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tornado.xoserver.controllers.ServerHomeController">
   <children>
      <Label fx:id="serverStatus" />
      <Button fx:id="startServerButton" onAction="#startServer" text="Start Server" />
      <Button fx:id="stopServerButton" onAction="#stopServer" text="Stop Server" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
